{
  "name": "slack-clone-frontend",
  "version": "0.1.0",
  "description": "Slack clone built using React, Typescript, styled-components, Apollo Graphql, Auh0, Hasura and Netlify.",
  "keywords": [
    "react hooks",
    "typescript",
    "styled-components",
    "Apollo Graphql",
    "Hasura",
    "Algolia",
    "Auth0",
    "Netlify"
  ],
  "private": true,
  "dependencies": {
    "@apollo/react-hooks": "^3.0.1",
    "@auth0/auth0-spa-js": "^1.0.2",
    "@material-ui/core": "^4.4.2",
    "apollo-cache-inmemory": "^1.6.0",
    "apollo-client": "^2.6.0",
    "apollo-link-context": "^1.0.18",
    "apollo-link-http": "^1.5.14",
    "apollo-link-ws": "^1.0.17",
    "date-fns": "^2.2.1",
    "downshift": "^3.3.1",
    "graphql": "^14.3.1",
    "graphql-tag": "^2.10.1",
    "history": "^4.9.0",
    "lodash": "^4.17.19",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "styled-components": "^4.2.0",
    "subscriptions-transport-ws": "^0.9.16"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "posttest": "npm run format",
    "eject": "react-scripts eject",
    "format": "prettier --write \"**/*.{js,css,md,ts,tsx}\"",
    "prebuild": "tsc",
    "create-types": "npx apollo codegen:generate --outputFlat src/generated --target typescript --endpoint https://slack-clone-hasura.herokuapp.com/v1/graphql --tagName gql --header 'x-hasura-access-key:'$HASURA_KEY"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/history": "^4.7.2",
    "@types/jest": "^24.0.12",
    "@types/lodash": "^4.14.134",
    "@types/node": "^12.0.0",
    "@types/react": "16.8.16",
    "@types/react-dom": "16.8.4",
    "@types/styled-components": "^4.1.14",
    "husky": ">=1",
    "lint-staged": ">=8",
    "prettier": "^1.17.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts,tsx}": [
      "eslint",
      "git add"
    ]
  }
}
